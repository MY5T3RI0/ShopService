@page
@model DeliveryListModel
@{
}

<div class="container text-center table-borderless border-1 border-dark" style="margin-top:30px; border-style:solid">
    <div class="row" style="padding-top:10px">
        <div class="col">Id</div>
        <div class="col">Date</div>
        <div class="col">Store</div>
        <div class="col">
            <a class="btn btn-success" asp-area="" asp-page="DeliveryCreate" style="margin:10px">Add new delivery</a>
        </div>
    </div>
    @foreach(var delivery in Model.Deliveries)
    {
        <div class="accordion" id="accordionExample">
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingOne">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        <div class="container text-center table-borderless" style="margin-top:30px">
                            <div class="row" style="padding-top:10px">
                                <div class="col">@delivery.Id</div>
                                <div class="col">@delivery.Date</div>
                                <div class="col">@delivery.Store.Name</div>
                                <div class="col">
                                </div>
                            </div>
                        </div>
                    </button>
                </h2>
                <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        <div class="row" style="padding-top:10px">
                            <div class="col">Product Id</div>
                            <div class="col">Product Count</div>
                            <hr />
                        </div>

                        @foreach (var deliveryInfo in delivery.DeliveryInfos)
                        {
                            <div class="row" style="padding-top:10px">
                                <div class="col">@deliveryInfo.ProductId</div>
                                <div class="col">@deliveryInfo.ProductCount</div>
                            </div>
                        }

                        <a class="btn btn-danger" asp-area="" asp-page="DeliveryDelete" asp-route-id="@delivery.Id">Delete</a>

                    </div>
                </div>
            </div>
        </div>
    }
</div>