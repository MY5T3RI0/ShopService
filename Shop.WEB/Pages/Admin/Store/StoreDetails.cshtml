@page
@using Shop.WEB.Pages.Admin.Delivery;
@model StoreDetailsModel

<div class="row">

    <div class="card col-md-5" style="overflow:scroll; width: 850px; height: 700px;">

        <div class="form-group">
            <label asp-for="Store.Name"></label>
            <input asp-for="@Model.Store.Name" class="form-control" placeholder="@Model.Store.Name" readonly/>
            <span asp-validation-for="Store.Name" class="text-danger"></span>
        </div>

        <div class="card-body">
            <div class="bd-example row" style="max-height:50px">
                <div class="scrollspy-example bg-light p-3 rounded-2 col" style="border: 1px solid rgba(0,0,0,.125)">
                    <h4 id="scrollspyHeading1">Deliveries</h4>
                    @foreach(var delivery in Model.Store.Deliveries)
                    {
                        <div class="row" style="padding-top:14px">
                            <div class="col-md-2">@delivery.Id</div>
                            <div class="col">@delivery.Date</div>
                            <hr style="margin-top:20px" />
                        </div>
                    }
                </div>
                <div class="scrollspy-example bg-light p-3 rounded-2 col" style="border: 1px solid rgba(0,0,0,.125)">
                    <h4 id="scrollspyHeading1">Purchases</h4>
                    @foreach (var purchase in Model.Store.Purchases)
                    {
                        <div class="row" style="padding-top:10px">
                            <div class="col">@purchase.Date</div>
                            <a class="btn btn-info col-md-3" asp-area="" asp-page="/Admin/Purchase/PurchaseDetails" asp-route-id="@purchase.Id">Details</a>
                            <hr style="margin-top:10px"/>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="card col-sm-12 col-md-5" style="overflow:scroll; width: 450px; height: 700px;">

        <div class="card-body">
            <div class="bd-example" style="max-height:50px">
                <div class="scrollspy-example bg-light p-3 rounded-2 col" style="border: 1px solid rgba(0,0,0,.125)">
                    <h4 id="scrollspyHeading1">Products</h4>
                    <div class="row" style="padding-top:10px">
                        <div class="col">Product Id</div>
                        <div class="col">Count</div>
                        <hr />
                    </div>
                    @foreach (var productInStore in Model.Store.ProductsInStore)
                    {
                        <div class="row" style="padding-top:10px">
                            <div class="col">@productInStore.ProductId</div>
                            <div class="col">@productInStore.Count</div>
                            <hr />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

</div>