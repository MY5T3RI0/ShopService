@page
@model PurchaseDeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Delete Confirmation</h1>

<div class="alert alert-danger">
    <div class="row">
        <div class="col-12 col-md-6 col-xl-4 offset-md-3 offset-xl-4">
            <div class="text-center text-secondary">
                <h4><span class="text-primary">ID @Model.Purchase.Id</span></h4>
                <h4><span class="text-primary">@Model.Purchase.Date</span></h4>
                <h4><span class="text-primary">Customer @Model.Purchase.Customer.Name</span></h4>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="text-center col">
            <form method="post">
                <button type="submit" class="btn btn-danger">Yes</button>
                <a class="btn btn-success" asp-page="/Admin/Purchase/PurchaseList">No</a>
            </form>
        </div>
    </div>
</div>

